<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageItem"
        android:layout_width="@dimen/size55"
        android:layout_height="@dimen/size55"
        android:layout_marginLeft="@dimen/size2"
        android:layout_marginTop="@dimen/size2"
        android:layout_marginRight="@dimen/size2"
        android:layout_marginBottom="@dimen/size2"
        android:scaleType="fitXY"
        android:src="@drawable/icon200" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textsize12" />
</LinearLayout>
